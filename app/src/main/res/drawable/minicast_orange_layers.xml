<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Katman 1: düz turuncu taban -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF8A00"/>
        </shape>
    </item>

    <!-- Katman 2: merkez parlaklık -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="60%p"
                android:centerX="50%p"
                android:centerY="45%p"
                android:startColor="#FFFFAF3A"
                android:centerColor="#FFFF9322"
                android:endColor="#00FF8A00"/>
        </shape>
    </item>

    <!-- Katman 3: sağ-üst sıcaklık -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="55%p"
                android:centerX="80%p"
                android:centerY="20%p"
                android:startColor="#FFFFB74A"
                android:endColor="#00FF8A00"/>
        </shape>
    </item>

    <!-- Katman 4: sol-alt yumuşatma -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="70%p"
                android:centerX="18%p"
                android:centerY="78%p"
                android:startColor="#FFFF9A2E"
                android:endColor="#00FF8A00"/>
        </shape>
    </item>

    <!-- Katman 5: kenar vinyet -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="90%p"
                android:centerX="50%p"
                android:centerY="50%p"
                android:startColor="#00E67100"
                android:endColor="#80D76800"/>
        </shape>
    </item>
</layer-list>
