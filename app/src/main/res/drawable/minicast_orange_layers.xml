<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Katman 1: düz turuncu taban -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF8A00"/>
        </shape>
    </item>

    <!-- Katman 2: merkez parlaklık -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="0.6"
                android:centerX="0.5"
                android:centerY="0.45"
                android:startColor="#FFFFAF3A"
                android:centerColor="#FFFF9322"
                android:endColor="#00FF8A00"/>
        </shape>
    </item>

    <!-- Katman 3: sağ-üst sıcaklık -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="0.55"
                android:centerX="0.8"
                android:centerY="0.2"
                android:startColor="#FFFFB74A"
                android:endColor="#00FF8A00"/>
        </shape>
    </item>

    <!-- Katman 4: sol-alt yumuşatma -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="0.7"
                android:centerX="0.18"
                android:centerY="0.78"
                android:startColor="#FFFF9A2E"
                android:endColor="#00FF8A00"/>
        </shape>
    </item>

    <!-- Katman 5: kenar vinyet -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="0.9"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#00E67100"
                android:endColor="#80D76800"/>
        </shape>
    </item>
</layer-list>
