<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Üst bölümü kaydırmalı yapmak için AppBarLayout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/mc_black"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:title="@string/app_name"
            app:titleCentered="false"
            app:menu="@menu/main_menu"
            app:layout_scrollFlags="scroll|enterAlways" />

        <!-- İnce URL bar: ayrı layout’tan dahil ediliyor -->
        <include
            layout="@layout/include_url_bar" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- İçerik: WebView (AppBar ile senkron scroll için behavior zorunlu) -->
    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:url="https://www.google.com" />

    <!-- TV'ye bağlan butonu -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv"
        android:contentDescription="@string/connect_to_tv"
        android:layout_margin="16dp"
        app:icon="@android:drawable/ic_media_play"
        app:iconTint="@android:color/white"
        app:layout_anchor="@id/rootCoordinator"
        app:layout_anchorGravity="bottom|end" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
