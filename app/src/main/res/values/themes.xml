<!-- app/src/main/res/values/themes.xml — Adım 3: Tema zinciri doğrulandı -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 1) Ana Material3 tabanlı tema -->
    <style name="Theme.MiniCast.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Renkler projedeki colors.xml ile eşleşmeli -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:statusBarColor">@color/mc_black</item>
        <item name="android:navigationBarColor">@color/mc_black</item>
        <item name="android:windowBackground">@color/mc_black</item>
        <!-- İsteğe bağlı:
        <item name="material3.dynamicColor">false</item>
        -->
    </style>

    <!-- 2) Splash teması (yalnızca açılışta) -->
    <style name="Theme.MiniCast.Splash" parent="Theme.MiniCast.Base">
        <!-- AndroidX SplashScreen öznitelikleri -->
        <item name="windowSplashScreenBackground">@drawable/minicast_orange_layers</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/minicast_logo_foreground</item>
        <!-- Splash sonrası kullanılacak KALICI tema:
             Zincir bütünlüğü için Base yerine app teması işaretlenir -->
        <item name="postSplashScreenTheme">@style/Theme.MiniCast</item>
    </style>

    <!-- 3) Uygulamanın genel (kalıcı) teması -->
    <style name="Theme.MiniCast" parent="Theme.MiniCast.Base" />

</resources>
